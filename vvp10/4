#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
	system("chcp 1251");
	system("cls");
	int a, b, c, d, e;
	printf("Блок 4\nЭта программа проверяет, образуют цифры числа возрастающую или убывающую последовательность\nВведите трехзначное число: ");
	scanf_s("%d", &a);
	b = a / 100;
	c = a / 10; 
	d = c % 10;
	e = a % 10;
	if (((b < d) && (d < e))|| ((b > d) && (d > e)))
		printf("Цифры числа образуют возрастающую или убывающую последовательность");
	else
		printf("Цифры числа не образуют возрастающую или убывающую последовательность");
	return 0;
}
