#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
	system("chcp 1251");
	system("cls");
	float v1, v2, s, so, t, s1, s2;
	printf("Блок 4\nЭта программа считает расстояние между автомобилями через промежуток времени\n");
	printf("Введите скорость первого автомобиля: ");
	scanf_s("%f", &v1);
	printf("Введите скорость второго автомобиля: ");
	scanf_s("%f", &v2);
	printf("Введите значение прошедшего времени: ");
	scanf_s("%f", &t);
	printf("Введите изначальное расстояние между автомобилями: ");
	scanf_s("%f", &s);
	s1 = v1 * t;
	s2 = v2 * t;
	so = s1 + s2 + s;
	printf("%f км - расстояние между автомобилями", so);
	return 0;
}
