#include <stdlib.h>
#include <stdio.h>
#include <math.h>
#define na 100 

int main()
{
    system("chcp 1251");
    system("cls");
    int n, i, a[na];
    printf("Блок 5\nЭта программа выводит введенный массив в определенной последовательности\nВведите размер массива: ");
    scanf_s("%d", &n);
    printf("Введите значения массива: \n");
    for (i = 0; i < n; i++) 
    {
        printf("a[%d]: ", i + 1);
        scanf_s("%d", &a[i]);
    }
    printf("Получилась такая последовательность: \n");
    for (i = 0; i < n / 2; i++) 
    {
        printf("%d\n", a[i]);
        printf("%d\n", a[n - i - 1]);
    }
    if (n % 2 != 0) 
        printf("%d\n", a[(n / 2)]);
    return 0;
}
