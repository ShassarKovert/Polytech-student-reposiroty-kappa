#include <stdlib.h>
#include<stdio.h>
#include<math.h>

int main()
{
	system("chcp 1251");
	system("cls");
	int a, k, n;
	printf("Блок 3\nЭта программа считает номер дня недели, если год начинался с введенного числа\nВведите номер дня в году: ");
	scanf_s("%d", &k);
	printf("Введите номер дня недели 1 января: ");
	scanf_s("%d", &n);
	a = ((k + n - 2) % 7) + 1;
	printf("%d - номер дня недели, если год начинался с %d дня недели ", a, n);
	return 0;
}
