#include <stdio.h> // ввод и вывод
#include <stdlib.h> // для русского
#include <math.h> // математика

int main() // Блок 3
{
	float a, b, sr;
	system("chcp 1251");
	system("cls");
	printf("Блок 3\nЭта программа считает среднее арифметчиеское двух чисел \n");
	printf("Введите число a = ");
	scanf_s("%f", &a);
	printf("Введите число b = ");
	scanf_s("%f", &b);
	sr = (a + b) / 2;
	printf("Среднее арифметическое = %f", sr);
	return 0;

}
